{{> head }}

<div class="container">
    <div style="text-align:center">
        <h2>Stock Market Prediction</h2>
        <p>EUR/USD</p>
    </div>
    <div class="row">
        <div class="column">
            <img src="assets/img/stock-min.jpg" class="img-fluid">
        </div>
        <div class="column">
            <form>
            <label for="sel1">Seleccionar el numero de HiddenLayers que utilizará la red neuronal</label>
            <select class="form-control" id="selectHL" name="sellist1">
        <option>5</option>
        <option>10</option>
        <option>20</option>
        <option>30</option>
        <option>40</option>
      </select>
                <label for="papertura">Precio Apertura</label>
                <input type="text" id="apertura" name="apertura" placeholder="1.16607" maxlength="7" minlength="7"required>
                <label for="pmaximo">Precio Máximo</label>
                <input type="text" id="maximo" name="maximo" placeholder="1.17455" maxlength="7" minlength="7" required>
                <label for="pminimo">Precio Mínimo</label>
                <input type="text" id="minimo" name="minimo" placeholder="1.16552" maxlength="7" minlength="7" required>
                <div class="form-group">
                    <input type="button" class="btn btn-primary" id="Aceptar" onclick="Spinner()" value="Aceptar" style="width: 100%;">
                </div>
            </form>
        </div>
    </div>
    <div class="row" style="display: flex; justify-content: center;">
        <div class="spinner-border text-info" id="loading" style="display: none;"></div>
    </div>
    <div class="row">
        <div class="column">
            <div id="result"></div>
        </div>
        <div class="column">
            <div id="divColorResult">
                <h2 id="resultadoFormatBUY"></h2>
                <h2 id="resultadoFormatSELL"></h2>
                <h2 id="resultadoFormatSAME"></h2>
            </div>
        </div>
    </div>
</div>
{{> footer }}